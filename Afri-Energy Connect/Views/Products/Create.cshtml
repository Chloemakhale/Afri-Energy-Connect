@model ProductDto 
@{
}


<div class="row">
    <div class="col-md-8 mx-0align-self-auto rounded border p-3">
        <h2 class="text-center mb-5">New Product</h2>

        <form method="post" enctype="multipart/form-data">
            <div class="row mb-3">
            <label class="col-sm-4 col-form-label">Name</label>
            <div class="col-sm-8">
                <input class="form-control" asp-for="ProductName">
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Category</label>
                <div class="col-sm-8">
                    <select class="form-select" asp-for="ProductCategory">
                        <option value="Other">Other</option>
                        <option value="Plants">Plants</option>
                        <option value="Livestock">Livestock</option>
                        <option value="Grains">Grains</option>

                        </select>

                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">ProductionDate</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="ProductionDate">
                    <span asp-validation-for="ProductionDate" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-outline-primary" asp-controller="Products" asp-action="Index" role="button">
                        Cancel
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>