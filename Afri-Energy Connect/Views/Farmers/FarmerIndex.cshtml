
@model IEnumerable<Afri_Energy_Connect.Models.Farmer>
@{
    ViewData["Title"] = "Farmers";
}
<h1>Farmers</h1>

<h2 class="text-center mb-5">List of Farmers</h2>
@if (User.Identity.IsAuthenticated)
{
    <div class="row mb-5">
        <div class="col">
            <a class="btn btn-primary" asp-controller="Farmers" asp-action="Create">New Farmer</a>
        </div>
        <div class="col">
        </div>

    </div>
}

<table class="table">
    <thead>
        <tr>
            <th> ID</th>
            <th> Name</th>
            <th>Email</th>
            <th>Occupation </th>
            @if (User.Identity.IsAuthenticated)
            {
                <th>Actions</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var farmer in Model)
        {
            <tr>
                <td>@farmer.ID</td>
                <td>@farmer.Name</td>
                <td>@farmer.Email</td>
                <td>@farmer.Occupation</td>
                <td style="white-space:nowrap">
                    <a class="btn btn-primary btn-sm" asp-controller="Products" asp-action="Edit"
                       asp-route-id="@farmer.ID">Edit</a>
                    <a class="btn btn-danger btn-sm" asp-controller="Products" asp-action="Delete"
                       asp-route-id="@farmer.ID">Delete</a>

                </td>

            </tr>
        }
    </tbody>
